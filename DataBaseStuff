CREATE TABLE `users` (
  `ID` int(11) NOT NULL AUTO_INCREMENT,
  `fname` varchar(255) NOT NULL,
  `lastname` varchar(255) NOT NULL,
  `rank` varchar(255) NOT NULL DEFAULT "cadet",
  `troop` varchar(255) NOT NULL DEFAULT "Chard",
  `section` int(11) NOT NULL DEFAULT 1,
  `CFAV` boolean NOT NULL DEFAULT FALSE,
  PRIMARY KEY (`ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;
/* troop Tables*/
CREATE TABLE `troops` (
  `ID` int(11) NOT NULL AUTO_INCREMENT, 
  `troopName` varchar(255)NOT NULL, 
  PRIMARY KEY (`ID`),
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `chard` (
  `ID` int(11) NOT NULL AUTO_INCREMENT, 
  `userID` int(11)NOT NULL, 
  PRIMARY KEY (`ID`),
  FOREIGN KEY (userID) REFERENCES users(ID)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `kitchener` (
  `ID` int(11) NOT NULL AUTO_INCREMENT, 
  `userID` int(11)NOT NULL, 
  PRIMARY KEY (`ID`),
  FOREIGN KEY (userID) REFERENCES users(ID)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `gundulf` (
  `ID` int(11) NOT NULL AUTO_INCREMENT, 
  `userID` int(11)NOT NULL, 
  PRIMARY KEY (`ID`),
  FOREIGN KEY (userID) REFERENCES users(ID)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `archibald` (
  `ID` int(11) NOT NULL AUTO_INCREMENT, 
  `userID` int(11)NOT NULL, 
  PRIMARY KEY (`ID`),
  FOREIGN KEY (userID) REFERENCES users(ID)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

/* Uniform Tables */
CREATE TABLE `sizes` (
  `ID` int(11) NOT NULL AUTO_INCREMENT,
  `itemID` int NOT NULL,
  `sizeTypeID` int(11) NOT NULL,
  `unit` varchar(255) DEFAULT 'cm',
  PRIMARY KEY (`itemID`,`sizeTypeID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `sizeType` (
  `ID` int(11) NOT NULL,
  `sizeType` varchar(255)

) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE `items` (
  `ID` int(11) NOT NULL AUTO_INCREMENT,
  `sizeTypeID` int(11) NOT NULL,
  `NumIssued` int(11) NOT NULL,
  `NumInStore` int(11) NOT NULL,
  `NumReserved` int(11) NOT NULL,
  PRIMARY KEY (`ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

